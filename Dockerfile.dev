# dockerfile.dev - Development build for AI Assistant

FROM python:3.10-slim

# ğŸ›  System dependencies
RUN apt-get update && apt-get install -y \
    build-essential libssl-dev libffi-dev python3-dev git curl \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“‚ Working directory
WORKDIR /app/ai_assistant

# ğŸ“¦ Copy requirements first
COPY requirements.txt .

# ğŸ”„ Upgrade pip
RUN pip install --upgrade pip

# ğŸ¤– Install PyTorch CPU wheels
RUN pip install --no-cache-dir \
    torch==2.2.2 torchvision==0.17.2 torchaudio==2.2.2 \
    --extra-index-url https://download.pytorch.org/whl/cpu

# ğŸ“¦ Install other dependencies
RUN pip install --no-cache-dir -r requirements.txt

# ğŸ“‚ Copy application code
COPY . .

# ğŸŒ Expose port (default: 8000)
EXPOSE 8000

# ğŸ‘‡ Environment Variables
ENV PYTHON_ENV=development

# ğŸš€ Run FastAPI with Uvicorn (development mode)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
